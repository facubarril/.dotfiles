        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Óª® {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Û∞ìÉ",
            "headset": "Û∞ìÉ",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "battery": {
        "interval": 30,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% <span color='#1ce009'>Û∞ÇÑ</span>",
        "format-plugged": "{capacity}% <span color='#1ce009'>Û∞ÇÑ</span>",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "<span color='#eb1212'>Û∞Å∫</span>",
            "<span color='#e16300'>Û∞Åº</span>",
            "<span color='#c39500'>Û∞Åæ</span>",
            "<span color='#92bd00'>Û∞ÇÄ</span>",
            "<span color='#1ce009'>Û∞ÇÇ</span>",
            "<span color='#1ce009'>Û∞Åπ</span>"
        ]
    },
    "custom/power": {
        "format": "‚èª ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "poweroff",
            "reboot": "reboot",
            "suspend": "systemctl suspend"
        }
    },
    "custom/expand": {
        "format": "ÔÑÑ",
        "tooltip": false
    },
    "custom/endpoint": {
        "format": "|",
        "tooltip": false
    },
    "custom/colorpicker": {
        "format": "Óà´",
        "interval": "once",
        "on-click": "hyprpicker -a -f hex",
        "tooltip": false
    },
    "cpu": {
        "format": "Û∞ª†",
        "tooltip": true
    },
    "memory": {
        "format": "ÓøÖ"
    },
    "temperature": {
