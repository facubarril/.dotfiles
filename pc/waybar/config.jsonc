{
    "layer": "top",
    "position": "top",
    "margin": "10 10 0 10",
    "reserved": true,
    "reload_style_on_change": true,
    "modules-left": [
        "custom/menu",
        "hyprland/window"
    ],
    "modules-center": [
        "clock",
        "hyprland/workspaces",
        "custom/update",
        "custom/notification"
    ],
    "modules-right": [
        "group/expand",
        "tray",
        "bluetooth",
        "pulseaudio",
        "network",
        "custom/power"
    ],
    // --- MODULES LEFT
    "custom/menu": {
        "format": "Û∞çú",
        "on-click": "$HOME/.config/rofi/launchers/type-3/launcher.sh"
    },
    "hyprland/window": {
        "format": "{}"
    },
    // --- MODULES CENTER
    "hyprland/workspaces": {
        "format": " ",
        "persistent-workspaces": {
            "*": [ 1, 2, 3, 4, 5, 6 ]
        }
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },
    "clock": {
        "format": "{:%H:%M}",
        "interval": 1,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "timezone": "America/Argentina/Buenos_Aires",
        "locale": "es_AR.UTF-8",
        "calendar": {
            "format": {
                "today": "<span color='#ffc13d'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "shift_down",
            "on-click": "shift_up"
        }
    },
    "custom/update": {
        "format": "Û∞Ö¢ {}",
        "interval": 30,
        "exec": "dnf check-update | wc -l",
        "exec-if": "exit 0",
        "on-click": "kitty sh -c 'sudo dnf update; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
        "signal": 8,
        "tooltip": false
    },
    // --- MODULES RIGHT
    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true
        },
        "modules": [
            "custom/expand",
            "custom/colorpicker",
            "cpu",
            "memory",
            "temperature",
            "custom/endpoint"
        ]
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ",
        "format-off": "BT-off",
        "format-disabled": "Û∞Ç≤",
        "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
        "format-alt": "{device_alias} Û∞ÇØ",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager",
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "Óºâ",
        "format-disconnected": "Ó¨Å",
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "kitty nmtui"
    },
    "pulseaudio": {
        "scroll-step": 10,
