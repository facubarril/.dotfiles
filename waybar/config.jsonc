{
        "layer": "top",
        "position": "top",
        "reload_style_on_change": true,

        "modules-left": ["custom/notification","clock","custom/update","tray"],
        "modules-center": ["hyprland/workspaces"],
        "modules-right": ["group/expand","bluetooth","pulseaudio","network","power-profiles-daemon","battery","custom/power"],

        // --- MODULES LEFT
        "custom/notification": {
            "tooltip": false,
            "format": "Óöê",
            "on-click": "swaync-client -t -sw",
            "escape": true
        },
        "clock": {
            "format": "{:%H:%M }",
            "interval": 1,
            "tooltip-format": "<tt><small>{calendar}</small></tt>",
            "timezone": "America/Argentina/Buenos_Aires",
            "locale": "es_AR.UTF-8",
            "calendar": {
                "format": {
                    "today": "<span color='#ffc13d'><b>{}</b></span>"
                }
            },
            "actions": {
                "on-click-right": "shift_down",
                "on-click": "shift_up"
            }
        },
        "custom/update": {
            "format": "Û∞Ö¢ {}",
            "interval": 30,
            "exec": "dnf check-update | wc -l",
            "exec-if": "exit 0",
            "on-click": "kitty sh -c 'sudo dnf update; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
            "signal": 8,
            "tooltip": false
        },
        "tray": {
            "icon-size": 14,
            "spacing": 10
        },

        // --- MODULES CENTER
        "hyprland/workspaces": {
            "format": "{icon}",
            "format-icons": {
                "active": "Û∞î∂",
                "default": "Û∞î∂",
                "empty": "Û∞î∂"
            },
            "persistent-workspaces": {
                "*": [ 1,2,3,4,5,6 ]
            }
        },

        // --- MODULES RIGHT
        "group/expand": {
            "orientation": "horizontal",
            "drawer": {
                "transition-duration": 600,
                "transition-to-left": true,
                "click-to-reveal": true
            },
            "modules": [
                "custom/expand",
                "custom/colorpicker",
                "cpu",
                "memory",
                "temperature",
                "custom/endpoint"
            ]
        },
        "bluetooth": {
            "format-on": "Û∞ÇØ",
            "format-off": "BT-off",
            "format-disabled": "Û∞Ç≤",
            "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
            "format-alt": "{device_alias} Û∞ÇØ",
            "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
            "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
            "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
            "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
            "on-click-right": "blueman-manager",
        },
        "network": {
            "format-wifi": "Ôá´",
            "format-ethernet":"Óºâ",
            "format-disconnected": "Ó¨Å",
            "tooltip-format-disconnected": "Error",
            "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
            "tooltip-format-ethernet": "{ifname} üñß ",
            "on-click": "kitty nmtui"
        },
        "pulseaudio": {
		"scroll-step": 10,
		"format": "{volume}% {icon} {format_source}",
		"format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
		"format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
		"format-muted": "Óª® {format_source}",
		"format-source": "{volume}% ÔÑ∞",
		"format-source-muted": "ÔÑ±",
		"format-icons": {
		    "headphone": "ÔÄ•",
		    "hands-free": "Ôñê",
		    "headset": "Ôñê",
		    "phone": "ÔÇï",
		    "portable": "ÔÇï",
		    "car": "ÔÜπ",
		    "default": [
			    "ÔÄ¶",
			    "ÔÄß",
			    "ÔÄ®"
		    ]
		},
		"on-click": "pavucontrol"
	    },
        "power-profiles-daemon": {
	      "format": "{icon}",
	      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
	      "tooltip": true,
	      "format-icons": {
		"default": "ÔÉß",
		"performance": "ÔÉß",
		"balanced": "Ôâé",
		"power-saver": "ÔÅ¨"
	      }
	},
        "battery": {
            "interval": 30,
            "states": {
                "good": 95,
                "warning": 30,
                "critical": 15
            },
            "format": "{capacity}% {icon}",
            "format-charging": "{capacity}% <span color='#1ce009'>Û∞ÇÑ</span>",
            "format-plugged": "{capacity}% <span color='#1ce009'>Û∞ÇÑ</span>",
            "format-alt": "{time} {icon}",
            "format-icons": [
                "<span color='#eb1212'>Û∞Å∫</span>",
