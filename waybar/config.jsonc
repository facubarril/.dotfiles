                "<span color='#92bd00'>Û∞ÇÄ</span>",
                "<span color='#1ce009'>Û∞ÇÇ</span>",
                "<span color='#1ce009'>Û∞Åπ</span>"
            ]
        },
        "custom/power": {
		"format" : "‚èª ",
			"tooltip": false,
			"menu": "on-click",
			"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
			"menu-actions": {
				"shutdown": "poweroff",
				"reboot": "reboot",
				"suspend": "systemctl suspend",
				"hibernate": "systemctl hibernate"
			}
	    },
        "custom/expand": {
            "format": "ÔÑÑ",
            "tooltip": false
        },
        "custom/endpoint":{
            "format": "|",
            "tooltip": false
        },
        "custom/colorpicker": {
            "format": "{}",
            "return-type": "json",
            "interval": "once",
            "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
            "on-click": "~/.config/waybar/scripts/colorpicker.sh",
            "signal": 1,
            "tooltip": false
        },
        "cpu": {
            "format": "Û∞ª†",
